{% extends 'base.html.twig' %}

{% block title %}Quest{% endblock %}

{% block body %}
    <h1>Quest</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quest.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ quest.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ quest.content }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_comment_new', {'id': quest.id}) }}">Ajouter un commentaire</a>
    </div>

    <div>
        {% for comment in comments %}
            <div>{{ comment.user.email }} a dit:</div>
            <div>{{ comment.content }}</div>
        {% endfor %}
        
    </div>

{% endblock %}
