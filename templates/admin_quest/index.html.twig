{% extends 'base.html.twig' %}

{% block title %}Quest index{% endblock %}

{% block body %}
    <h1>Quest index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quest in quests %}
            <tr>
                <td>{{ quest.id }}</td>
                <td>{{ quest.title }}</td>
                <td>{{ quest.content }}</td>
                <td>
                    <a href="{{ path('app_admin_quest_show', {'id': quest.id}) }}">show</a>
                    <a href="{{ path('app_admin_quest_edit', {'id': quest.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_quest_new') }}">Create new</a>
{% endblock %}
